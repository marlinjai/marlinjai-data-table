{
  "name": "@marlinjai/data-table-react",
  "version": "0.1.2",
  "description": "React components for @marlinjai/data-table",
  "author": "marlinjai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marlinjai/marlinjai-data-table.git",
    "directory": "packages/react"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles": "./dist/styles/base.css",
    "./styles/base.css": "./dist/styles/base.css",
    "./styles/variables.css": "./dist/styles/variables.css",
    "./dist/styles/base.css": "./dist/styles/base.css",
    "./dist/styles/variables.css": "./dist/styles/variables.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && npm run copy-styles",
    "copy-styles": "mkdir -p dist/styles && cp src/styles/*.css dist/styles/",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@marlinjai/data-table-core": "*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  }
}
